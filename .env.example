# Binance API Credentials
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Trading Mode (paper/live)
TRADING_MODE=paper

# Risk Management Settings
MAX_RISK_PER_TRADE=0.02
MAX_PORTFOLIO_RISK=0.15
INITIAL_BALANCE=10000

# Target Profit and Loss (USD per day)
TARGET_DAILY_PROFIT=50
MAX_DAILY_LOSS=30

# Trading Configuration
TRADING_PAIRS=BTCUSDT,AVAXUSDT,ETHUSDT,ZECUSDT,BNBUSDT,POLUSDT,APTUSDT,SEIUSDT,NEARUSDT,SOLUSDT
MAX_CONCURRENT_TRADES=5
ENABLE_GRID_STRATEGY=true
ENABLE_MOMENTUM_STRATEGY=true
ENABLE_MEAN_REVERSION=true

# Strategy Allocation (must sum to 1.0)
GRID_ALLOCATION=0.5
MOMENTUM_ALLOCATION=0.3
MEAN_REVERSION_ALLOCATION=0.2

# Momentum Strategy Parameters (TIGHTENED FOR QUALITY)
MOMENTUM_THRESHOLD=0.75  # Minimum momentum score (0.75 = only top 25% signals)
VOLUME_THRESHOLD=2.0  # Require 2x average volume (breakout confirmation)

# Grid Trading Parameters
GRID_SPACING_BTC=0.02
GRID_SPACING_ALT=0.05
GRID_LEVELS=10

# Technical Indicator Parameters
RSI_PERIOD=14
RSI_OVERSOLD=35
RSI_OVERBOUGHT=70
EMA_FAST=20
EMA_SLOW=50
EMA_TREND=200
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BB_PERIOD=20
BB_STD=2
ATR_PERIOD=14

# Stop Loss & Take Profit (FIXED 5% STOP SYSTEM)
# Initial stop loss is now FIXED at 5% for all trades (not ATR-based)
ATR_STOP_MULTIPLIER=2.5  # No longer used, kept for compatibility
TRAILING_STOP_PERCENT=5  # Fixed 5% trailing stop from peak (hard-coded)
TRAILING_STOP_ACTIVATION=0.005  # Trailing activates at 0.5% profit
# NOTE: All trades risk exactly 5% - initial stop at -5%, trailing maintains 5% from peak
# NO FIXED TAKE PROFIT - trailing stop manages all exits!

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/trading_bot.log

# Database (Optional)
DATABASE_URL=sqlite:///./trading_data.db

# Telegram Bot Integration (Highly Recommended!)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Your Telegram user ID (get from @userinfobot)
# For multiple users, separate with commas: 123456789,987654321
TELEGRAM_CHAT_ID=

# Enable/disable Telegram notifications
ENABLE_TELEGRAM=true

# Discord Webhook (Optional alternative)
DISCORD_WEBHOOK=
